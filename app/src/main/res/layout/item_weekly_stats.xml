<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/surface_variant"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Week Range -->
        <TextView
            android:id="@+id/weekText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mar 11 - Mar 17"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/studyProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginBottom="12dp"
            android:progress="60"
            android:progressTint="@color/primary_color"
            android:progressBackgroundTint="@color/text_secondary" />

        <!-- Total Study Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Study"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/totalStudyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:30"
                android:textColor="@color/success_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Study Days -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study Days: "
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/studyDaysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/7"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Average Daily -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avg Daily: "
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/avgDailyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:06"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
