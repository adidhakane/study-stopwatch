<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/surface_variant"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Date and Goal Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mar 15, Mon"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goalPercentageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textColor="@color/success_color"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Goal Progress Bar -->
        <ProgressBar
            android:id="@+id/goalProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginBottom="8dp"
            android:progress="75"
            android:progressTint="@color/success_color"
            android:progressBackgroundTint="@color/text_secondary" />

        <!-- Study and Timepass Times -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Study"
                    android:textColor="@color/success_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/studyTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:45"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ® Timepass"
                    android:textColor="@color/warning_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timepassTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:20"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- Category Breakdown -->
        <TextView
            android:id="@+id/categoryBreakdownText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Development: 02:00, DSA: 01:45"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
